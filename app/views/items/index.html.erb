<% if flash[:notice].present? %>
	<div class="alert alert-success" id="success_msg">
		<a class="close" data-dismiss="alert" href="#">Ã—</a><span id="success"><%= flash[:notice]%></span>
	</div>
<% end %>

<div class="row-fluid sortable">
	<div class="box span12">
		
		<div class="box-header well" data-original-title>
			<h2> Items</h2>
		</div>
		
		<div class="box-content">
			<% if @items.present? %>
				<tbody>
					<tr><td colspan="6">
						<div class="digg_pagination" style="float:right;margin-bottom:10px;">
							<%= will_paginate @items, :container => false %>
						</div>
					</tr>	
				</tbody>
			
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
				<thead>
					<tr>
					 	<td colspan="5"><button type="submit" class="btn btn-primary bulk_update" style="float:left">Bulk Price Update</button></td>	
					</tr>
					<tr>
						<td width="4%">Select</td>
						<td width="10%">Item Id</td>
						<td width="10%">Picture</td>
						<td width="30%">Item Title</td>
						<td width="10%">Equation</td>
						<td width="8%">Quantity Available</td>
						<td width="7%">Price</td>
						<td width="8%">New Price</td>
						<td width="10%">Actions</td>
					</tr>
				</thead>
				
					<% @items.each do |item| %>
							<tr>
								<td class="center"><input type="checkbox" name="item[]" value="<%= item.item_id %>" class="chk"></td>
								<td class="center"><%= item.item_id %></td>
								<td class="center"><img src="<%= item.picture_url %>" height="50px" width="100px"></td>
								<td class="center"><a href="<%= item.view_url %>" target="_blank"><%= item.title %></a></td>
								<td class="center">equation</td>
								<td class="center"><%= item.quantity_available %></td>
								<td class="center"><%= item.currency %>&nbsp;<%= item.buy_it_now_price %></td>
								<td class="center"><input type="text" name="price_<%= item.item_id%>" id="price_<%= item.item_id%>" style="width:90%"></td>
								<td class="center">
									<a class="btn btn-success" href="/items/<%= item.item_id %>/edit"> Edit Price</a>
								</td>
							</tr>
					<% end %>
					<tr><td colspan="9">
						<div class="digg_pagination"  style="float:right;margin-bottom:10px;">
							<%= will_paginate @items, :container => false %>
						</div>
					</tr>
					<tr>
				 		<td colspan="7"><button type="submit" class="btn btn-primary bulk_update" style="float:left">Bulk Price Update</button></td>	
					</tr>	
				  <% else %>
				     <tr><td colspan="7">No Item(s) found.</td></tr>
				  <% end %>	
				
			</table>
		</div>
	</div><!--/span-->

</div><!--/row-->

<script type="text/javascript">
	jQuery(document).ready(function() {
		jQuery(".bulk_update").click(function(e){
			e.preventDefault();
			var bool = true
			if($(".chk:checked").length < 1) {
				alert("Please select at least one item.")
				bool = false
			}
			jQuery(".chk:checked").each(function() {
				var item_id = jQuery(this).val();
				var new_price = jQuery("#price_"+item_id).val();
				if(new_price.length < 1){
					alert("Please enter price for item ID #"+item_id);
					bool = false
				}	
					
			});
			
			if(bool) {
				alert("submit");
			}
		})
	});
	
</script>	

