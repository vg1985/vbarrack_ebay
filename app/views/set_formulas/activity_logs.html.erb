<% if flash[:notice].present? %>
	<div class="alert alert-success" id="success_msg">
		<a class="close" data-dismiss="alert" href="#">Ã—</a><span id="success"><%= flash[:notice]%></span>
	</div>
<% end %>





	


<div class="row-fluid sortable">
	<div class="box span12">
		
		<div class="box-header well" data-original-title>
			<h2>Activity Logs</h2>
		</div>
		
		<div class="box-content">
			<% if @actvity_logs.present? %>
				<tbody>
					<tr><td colspan="6">
						<div class="digg_pagination" style="float:right;margin-bottom:10px;">
							<%= will_paginate @actvity_logs, :container => false %>
						</div>
					</tr>	
				</tbody>
			
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
				<thead>
					<tr>
						<td width="15%">Action</td>
						<td width="15%">Item ID</td>
						<td width="25%">Updated Formula</td>
						<td width="15%">Updated By</td>
						<td width="15%">Updated At</td>
					</tr>
				</thead>
				
					<% @actvity_logs.each do |activty| 
						
					%>
							<tr>
								<td class="center"><%= activty.action %></td>
								<td class="center"><%= activty.item_id %></td>
								<td class="center"><%= activty.updated_formula %></td>
								<td class="center"><%= activty.updated_by %></td>
								<td class="center"><%= activty.created_at %></td>

								
								
							</tr>
					<% end %>
					<tr><td colspan="9">
						<div class="digg_pagination"  style="float:right;margin-bottom:10px;">
							<%= will_paginate @actvity_logs, :container => false %>
						</div>
					</tr>
						
				  <% else %>
				     <tr><td colspan="7">No Log(s) found.</td></tr>
				  <% end %>	
				
			</table>
		</div>
	</div><!--/span-->

</div><!--/row-->


